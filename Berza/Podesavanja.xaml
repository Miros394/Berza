<Window x:Class="Berza.Podesavanja"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Podesavanja" Height="450" Width="800"
        Background="#050D31">

    <Viewbox Stretch="Uniform">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="1" Margin="10" Padding="20" Background="#0A1A4D" BorderBrush="Gold" BorderThickness="2" CornerRadius="12">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <RadioButton x:Name="Btc" Content="BTC/USDT" GroupName="ParValuta" Foreground="Gold"  FontWeight="Bold" FontSize="16" Margin="0,0,20,0"/>
                            <RadioButton x:Name="Iznad" Content="Iznad" GroupName="Granica" Foreground="Gold" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <RadioButton x:Name="Eth" Content="ETH/USDT" GroupName="ParValuta" Foreground="Gold" FontWeight="Bold" FontSize="16" Margin="0,0,20,0"/>
                            <RadioButton x:Name="Ispod" Content="Ispod" GroupName="Granica" Foreground="Gold" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,15">
                        <TextBlock Text="Odaberite Granicu:" Foreground="Gold" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                        <TextBox x:Name="TB_Granica" Width="90" Height="26" FontSize="16" Text="0.00" Foreground="Black" Background="White" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,5">
                        <TextBlock Text="Dužina kratkog proseka (X)" Foreground="Gold" FontWeight="Bold" FontSize="16" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="1" Foreground="Gold" FontSize="14" VerticalAlignment="Center"/>
                            <Slider x:Name="Slajder" Minimum="1" Maximum="59" Value="10" Width="220" TickFrequency="1" IsSnapToTickEnabled="True" Margin="10,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="X_Vrednost" Text="10" Foreground="Gold" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Sačuvaj" Click="Upamti" Width="130" Height="40" Background="#0A1A4D" Foreground="Gold" FontWeight="Bold" FontSize="16" BorderBrush="Gold" BorderThickness="2" Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>
