<Window x:Class="Berza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Berza"
        mc:Ignorable="d"
        Title="Berza" Height="450" Width="800"
        Background="#050D31"
        WindowState="Maximized"
        Loaded="Window_Loaded">
    
    <Viewbox Stretch="Uniform">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Width="40" Height="40" Background="White" Margin="10">
                    <Image Source="/Resources/Start_Dugme.png" Stretch="Uniform"/>
                </Button>
            </StackPanel>

            <UniformGrid Grid.Row="1" Columns="4" Rows="1" VerticalAlignment="Center">

                <Border Margin="10" Background="#0A1A4D" BorderBrush="Gold" BorderThickness="1" CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="1" Source="/Resources/Bitcoin.png" Width="40" Height="40" Stretch="Uniform" Margin="15"/>
                    </Grid>
                </Border>

                <Border Margin="10" Background="#0A1A4D" BorderBrush="Gold" BorderThickness="1" CornerRadius="8">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Image Source="/Resources/Binance.png" Width="20" Height="20" Stretch="Uniform" Margin="0,0,8,0"/>
                            <TextBlock x:Name="BinanceBtc" Text="$-" Foreground="LimeGreen" FontWeight="Bold" FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Bybit.png" Width="20" Height="20" Stretch="Uniform" Margin="0,0,8,0"/>
                            <TextBlock x:Name="BybitBtc" Text="$-" Foreground="LimeGreen" FontWeight="Bold" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Margin="10" Background="#0A1A4D" BorderBrush="Gold" BorderThickness="1" CornerRadius="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="1" Source="/Resources/Ethereum.png" Width="40" Height="40" Stretch="Uniform" Margin="15"/>
                    </Grid>
                </Border>

                <Border Margin="10" Background="#0A1A4D" BorderBrush="Gold" BorderThickness="1" CornerRadius="8">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Image Source="/Resources/Binance.png" Width="20" Height="20" Stretch="Uniform" Margin="0,0,8,0"/>
                            <TextBlock x:Name="BinanceEth" Text="$-" Foreground="LimeGreen" FontWeight="Bold" FontSize="12"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Bybit.png" Width="20" Height="20" Stretch="Uniform" Margin="0,0,8,0"/>
                            <TextBlock x:Name="BybitEth" Text="$-" Foreground="LimeGreen" FontWeight="Bold" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <Border Grid.Row="2" Background="#0A1A4D" BorderBrush="Gold" BorderThickness="1" CornerRadius="8" Margin="120,0">
                <StackPanel>
                    <TextBlock Text="Preporuka" Foreground="Gold" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center"/>
                    <TextBlock Text="(nema preporuka)" Foreground="White" FontSize="10" HorizontalAlignment="Center" Margin="0,10"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="Podešavanja" Width="80" Height="30" Margin="10" Background="#0A1A4D" Foreground="Gold" FontWeight="Bold" BorderBrush="Gold" BorderThickness="2" FontSize="12"/>
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>