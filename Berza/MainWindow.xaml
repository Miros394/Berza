<Window x:Class="Berza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Berza"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#050D30">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,343">
            <Button Width="50" Height="50" Background="White">
                <Image Source="/Resources/Start_Dugme.png" Width="50" Height="50" Margin="0,0,5,0" Stretch="Uniform"/>
            </Button>
        </StackPanel>

        <UniformGrid Grid.Row="0" Columns="4" Rows="1">
            <Border Padding="120,0,0,0">
                <Image Source="/Resources/Bitcoin.png" Width="50" Height="50" Stretch="Uniform" />
            </Border>

            <Border Padding="0,0,150,0">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                        <Image Source="/Resources/Binance.png" Width="30" Height="30" Stretch="Uniform" Margin="0,0,5,0"/>
                        <TextBlock Text="$-" Foreground="Green" FontWeight="Bold" FontSize="14"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                        <Image Source="/Resources/Bybit.png" Width="30" Height="30" Stretch="Uniform" Margin="0,0,5,0"/>
                        <TextBlock Text="$-" Foreground="Green" FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Padding="120,0,0,0">
                <Image Source="/Resources/Ethereum.png" Width="50" Height="50" Stretch="Uniform" />
            </Border>

            <Border Padding="0,0,150,0">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                        <Image Source="/Resources/Binance.png" Width="30" Height="30" Stretch="Uniform" Margin="0,0,5,0"/>
                        <TextBlock Text="$-" Foreground="Green" FontWeight="Bold" FontSize="14"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                        <Image Source="/Resources/Bybit.png" Width="30" Height="30" Stretch="Uniform" Margin="0,0,5,0"/>
                        <TextBlock Text="$-" Foreground="Green" FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </UniformGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,343,0,0">
            <Button Content="Podešavanja" Width="100" Height="50" Margin="0,0,5,0" Background="#050D30" Foreground="Gold" FontWeight="Bold" BorderBrush="Gold" BorderThickness="2"/>
        </StackPanel>
    </Grid>
</Window>
